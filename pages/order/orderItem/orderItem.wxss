.container{
  background-color: #f8f8f8;
  width: 100%;
  padding: 63.35rpx 20.92rpx 0;
}
.order-body{
  width: 100%;
  margin: 0 auto;
  line-height: 36.2rpx;
  border-radius: 18.1rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 25.34rpx;
  text-align: center;
  font-family: -apple-system;
  border: 1.81rpx solid rgba(255, 255, 255, 0);
  background-color: #fff;
}
.order-c{
  width: 90%;
  line-height:36.2rpx;
  background-color:rgba(255, 255, 255, 1);
  color:rgba(16, 16, 16, 1);
  font-size:25.34rpx;
  text-align:center;
  font-family:-apple-system;
  border:1.81rpx solid rgba(255, 255, 255, 0);
  padding-top:32.58rpx;
  margin:1.81rpx auto 5.43rpx auto;
  border-radius:18.1rpx;
}
.p-name{
  text-align:left;
  width:80%;
}
.line{
  width: 100%;
  display: flex;
  align-items: flex-start;
  line-height: 36.2rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 25.34rpx;
  font-family: PingFangSC-regular;
  padding-bottom: 14.48rpx;
}
.line-l{
  width:32%;
  text-align:left;
}
.line-r{
  width: 72%;
  text-align: left;
  margin-right:25.34rpx;
}
.bt{
  border-top: 1.81rpx solid rgba(187, 187, 187, 1);
  border-radius: 0;
}
.prod-msg{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.btn, .toComment{
  float: right;
  width: 144.8rpx;
  height: 45.25rpx;
  line-height: 45.25rpx;
  border-radius: 18.1rpx;
  font-size: 21.72rpx;
  text-align: center;
  font-family: -apple-system;
  margin-bottom: 12.67rpx;
  margin-top: 18.1rpx;
}
.btn{
  background-color: rgba(255, 255, 255, 0);
  color: rgba(162, 213, 242, 1);
  border: 1.81rpx solid rgba(162, 213, 242, 1);
}
.toComment{
  background-color: rgba(138, 217, 236, 1);
  color: rgba(250, 250, 250, 1);
  border: 1px solid rgba(255, 255, 255, 0);
}
.btn-box{
  display: flex;
  justify-content: flex-end;
}
.p-price{
  height: 36.2rpx;
  color: rgba(255, 126, 103, 1);
  font-size: 25.34rpx;
  text-align: right;
  font-family: PingFangSC-regular;
}
.p-count{
  height: 36.2rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 25.34rpx;
  text-align: right;
  font-family: PingFangSC-regular;
}
.order-footer{
  height: 72.4rpx;
  line-height: 72.4rpx;
  border-radius: 0rpx;
  border: 1.81rpx solid rgba(255, 255, 255, 0);
  color: rgba(255, 126, 103, 1);
  font-size: 25.34rpx;
  font-family: PingFangSC-bold;
  margin-top: 9.05rpx;
  background-color: #fff;
  width: 100%;
}
.text{
  width: 90%;
  margin: 0 auto;
  text-align: right;
}
.loading{
  color:#a6a6a6;
  font-size: 25.34rpx;
  height: 53.44rpx;
  line-height: 53.44rpx;
}