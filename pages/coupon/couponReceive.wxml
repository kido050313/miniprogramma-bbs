        <view wx:else class='r5' bindtap='receive'>立即领取</view>
      </view>
    </view>
    <view class='coupon-tips'>
      <view class='txt'>使用须知：</view>
      <view class='txt'>每人限领取 1 张</view>
      <view class='txt'>不可与其他优惠同时使用</view>
