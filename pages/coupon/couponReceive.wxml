<!--pages/coupon/couponReceive.wxml-->
<view class='container'>
  <block>
    <view class='coupon-box'>
      <view class='box-l'>
        <view class='l1'>老会员双十一预热专享优惠券</view>
        <view class='l2'>代金券</view>
        <view class='l3'>50<text class='unit'>元</text></view>
        <view class='l4'>无使用门槛</view>
      </view>
