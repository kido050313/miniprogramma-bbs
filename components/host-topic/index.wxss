@import "../../styles/serch-class.wxss";

.topic-box {
    height: 60rpx;
    border-radius: 15rpx;
    box-shadow: 0rpx 4rpx 20rpx 0rpx #AAAAAA;
    display: inline-block;
    margin-left: 24rpx;
    margin-bottom: 24rpx;
}

.topic-icod {
    display: inline-block;
}

.topic-icod image {
    height: 40rpx;
    width: 40rpx;
    display: flex;
    white-space: nowrap;
    margin-left: 15rpx;
}

.topic-title {
    font-size: 26rpx;
    line-height: 60rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

button {
    font-size: 28rpx;
    background-color: #fff;
    border: none;
    padding: 0;
    margin: 0;
    line-height: 1.5;
    border-radius: 30rpx;
}

button::after {
    border: none;
}

input {
    outline: none;
    border: none;
    list-style: none;
}