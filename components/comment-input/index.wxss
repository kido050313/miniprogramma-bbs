@import "../../styles/serch-class.wxss";

.mask-box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 99;
    opacity: 0.2;
}

.input-box {
    position: fixed;
    height: 400rpx;
    width: 100%;
    background-color: #fff;
    bottom: 0;
    z-index: 99999;
}

.nav {
    margin-top: 24rpx;
}

.cancel {
    margin-left: 24rpx;
    font-size: 28rpx;
    color: #B9B9B9;
}

.release {
    margin-right: 24rpx;
    font-size: 28rpx;
    height: 50rpx;
    width: 100rpx;
    background-color: #F33535;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    border-radius: 30rpx;
}

.fill-in textarea {
    height: 150rpx;
    margin-left: 24rpx;
    width: 700rpx;
}

.com-images image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 30rpx;
    margin-left: 24rpx;
}

.image-row {
    position: relative;
}

.del {
    position: absolute;
    top: 8rpx;
    left: 105rpx;
}