@import "../../styles/serch-class.wxss";

.list-box {
    width: 720rpx;
    background-color: #fff;
    border-radius: 30rpx;
    margin: 15rpx auto;
}

.list-top {
    padding-top: 24rpx;
    margin-left: 24rpx;
}

.avatar-image image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 50%;
}

.user-msg {
    margin-left: 10rpx;
}

.user-name {
    font-size: 28rpx;
}

.user-level {
    font-size: 24rpx;
    background-color: #29252C;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
    width: 90rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
}

.roof-box {
    margin-left: 14rpx;
    background-color: #1B7FBD;
}

.essence {
    margin-left: 14rpx;
    background-color: #FFBD39;
    width: 40rpx;
}

.put-time {
    margin-right: 24rpx;
    font-size: 24rpx;
    color: #b2b2b2;
}

.list-content {
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.title {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.image-list {
    margin-top: 10rpx;
    display: flex;
    white-space: nowrap;
    flex-wrap: wrap;
    width: 100%;
}

.image-list .image-row {
    display: inline-block;
    border-radius: 30rpx;
    margin-right: 24rpx;
    margin-bottom: 10rpx;
}

.image-row image {
    height: 200rpx;
    width: 200rpx;
    border-radius: 30rpx;
}

.expand {
    font-size: 24rpx;
    color: #888;
    margin-top: 24rpx;
    padding-bottom: 24rpx;
}

.expand image {
    height: 40rpx;
    width: 40rpx;
}

.expand .number {
    margin-right: 24rpx;
    margin-left: 10rpx;
}

.topic-title {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-bottom: 10rpx;
}

.one-image image {
    height: 200rpx;
    width: 200rpx;
    border-radius: 30rpx;
}

.details {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
    color: #888;
    margin-top: 15rpx;
}

.video-box {
    margin-top: 10rpx;
    width: 100%;
}

.video-box video {
    width: 100%;
}

.big-image-row image {
    width: 100%;
    height: 400rpx;
    border-radius: 30rpx;
}

.content-line {
    border: 1rpx solid #b2b2b2;
    border-radius: 30rpx;
    padding: 24rpx;
}

.redbao {
    margin-left: 24rpx;
    margin-top: 24rpx;
}

.redbao image {
    height: 80rpx;
    width: 80rpx;
}

.red-title {
    margin-left: 10rpx;
    font-weight: bold;
    font-size: 32rpx;
}

.red-des {
    margin-left: 10rpx;
    font-size: 28rpx;
    color: #f33535;
}